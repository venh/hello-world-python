pipeline {
    agent {
        docker { image 'python:3.7-slim' }
    }
    stages {
        stage('Test') {
            steps {
	       script{
			sh """
				docker rmi -f py-img
				docker build -t py-img .
				docker rm -f py-container
				docker run --name py-container py-img
			   """
		  }
            }
        }
    }
}
